<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/buying_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#130d10"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_35"
        />
    <TextView
        android:id="@+id/buying_sdfgh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="选择合适的影院"
        android:layout_below="@id/buying_name"
        android:textColor="#be1360"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/buying_contents"
        android:layout_width="match_parent"
        android:layout_below="@+id/buying_sdfgh"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"
        />

    <ImageView
        android:id="@+id/buying_bliack"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/com_icon_default"
        android:layout_alignLeft="@id/buying_contents"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        />

</RelativeLayout>