<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_150"
    android:background="#969696"
   >

    <ImageView
        android:id="@+id/cinemadetail_popu_down"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/com_icon_down_default"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/cinemadetail_popu_tab"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="@dimen/dp_50"></android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/cinemadetail_popu_viewpager"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/cinemadetail_popu_tab"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>



</RelativeLayout>