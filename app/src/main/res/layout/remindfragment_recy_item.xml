<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/remind_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购票信息"
        android:textSize="@dimen/sp_16"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/remind_item_content"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:text="购票信息"
        android:layout_below="@+id/remind_item_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/remind_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:01"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/remind_item_unreadremind"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:text="1"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:textColor="#ffffff"
        android:background="@drawable/shaperemindtext"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_below="@+id/remind_item_time"/>
</RelativeLayout>