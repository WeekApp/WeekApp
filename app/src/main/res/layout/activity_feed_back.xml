<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.activity.myactivity.FeedBackActivity">

    <TextView
        android:id="@+id/feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"/>

    <EditText
        android:id="@+id/feedback_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:layout_below="@+id/feed"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:padding="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:textColor="#999999"
        />

    <Button
        android:id="@+id/feedback_commit"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_25"
        android:text="提交"
        android:textSize="@dimen/sp_12"
        android:textColor="#ffffff"
        android:background="@drawable/select_feed"
        android:layout_below="@+id/feedback_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        />

    <ImageView
        android:id="@+id/feedback_back"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/com_icon_default"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"/>

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@mipmap/xq_"
            android:layout_marginTop="@dimen/dp_140"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/succ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈成功"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:layout_below="@+id/iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感谢您对维度影院的关注与支持，我们会认真处理您的反"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:layout_below="@+id/succ"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="馈，尽快修复和完善相关功能"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
