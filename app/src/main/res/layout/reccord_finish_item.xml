<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content">

            <TextView
            android:id="@+id/rccordmoney_item_gomoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#fff"
            />
        <TextView
            android:id="@+id/rccordfinish_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铁血战士"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:id="@+id/rccordfinish_item_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordfinish_item_name"
            android:layout_marginTop="@dimen/dp_10"
            android:text="14:40:00"
            android:textSize="@dimen/sp_16"
            android:textColor="#f77421"/>

        <TextView
            android:id="@+id/rccordfinish_item_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordfinish_item_name"
            android:layout_toRightOf="@+id/rccordfinish_item_starttime"
            android:layout_marginTop="@dimen/dp_13"
            android:text="—"
            android:textSize="@dimen/sp_12"
            android:textColor="#f77421"/>

        <TextView
            android:id="@+id/rccordfinish_item_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordfinish_item_name"
            android:layout_toRightOf="@+id/rccordfinish_item_cinema"
            android:layout_marginTop="@dimen/dp_10"
            android:text="14:40:00"
            android:textSize="@dimen/sp_16"
            android:textColor="#f77421"/>

        <TextView
            android:id="@+id/rccordfinish_item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="#f77421"
            android:layout_below="@+id/rccordfinish_item_starttime"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_23"
            android:textColor="#f77421"
            android:layout_toRightOf="@+id/rccordfinish_item_start"
            android:layout_below="@+id/rccordfinish_item_starttime"
            />

        <TextView
            android:id="@+id/rccordfinish_item_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_below="@+id/rccordfinish_item_start"
            />

        <TextView
            android:id="@+id/rccordfinish_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_toRightOf="@+id/rccordfinish_item_c"
            android:layout_below="@+id/rccordfinish_item_start"
            />

        <TextView
            android:id="@+id/rccordfinish_item_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间："
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_below="@+id/rccordfinish_item_code"
            />

        <TextView
            android:id="@+id/rccordfinish_item_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_toRightOf="@+id/rccordfinish_item_order"
            android:layout_below="@+id/rccordfinish_item_code"
            />


        <TextView
            android:id="@+id/rccordfinish_item_ci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影院："
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_below="@+id/rccordfinish_item_order"
            />

        <TextView
            android:id="@+id/rccordfinish_item_cine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_toRightOf="@+id/rccordfinish_item_ci"
            android:layout_below="@+id/rccordfinish_item_order"
            />

        <TextView
            android:id="@+id/rccordfinish_item_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影厅："
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_below="@+id/rccordfinish_item_ci"
            />

        <TextView
            android:id="@+id/rccordfinish_item_moviehall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_toRightOf="@+id/rccordfinish_item_movie"
            android:layout_below="@+id/rccordfinish_item_ci"
            />

        <TextView
            android:id="@+id/rccordfinish_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量："
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_below="@+id/rccordfinish_item_movie"
            />

        <TextView
            android:id="@+id/rccordfinish_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_toRightOf="@+id/rccordfinish_item_num"
            android:layout_below="@+id/rccordfinish_item_movie"
            />

        <TextView
            android:id="@+id/rccordfinish_item_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额："
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_below="@+id/rccordfinish_item_num"
            />

        <TextView
            android:id="@+id/rccordfinish_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#999999"
            android:layout_toRightOf="@+id/rccordfinish_item_m"
            android:layout_below="@+id/rccordfinish_item_num"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>