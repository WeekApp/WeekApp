<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item"
        >

        <TextView
            android:id="@+id/cinemadetail_schedule_cinemaname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asd"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView

            android:id="@+id/cinemadetail_schedule_cinemastarttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asd"
            android:textSize="@dimen/sp_24"
            android:textColor="#333333"
            android:layout_below="@+id/cinemadetail_schedule_cinemaname"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="——"
            android:layout_below="@+id/cinemadetail_schedule_cinemaname"
            android:layout_toRightOf="@+id/cinemadetail_schedule_cinemastarttime"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:id="@+id/cinemadetail_schedule_cinemaendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asd"
            android:textSize="@dimen/sp_18"
            android:textColor="#666666"
            android:layout_below="@+id/cinemadetail_schedule_cinemaname"
            android:layout_toRightOf="@+id/cinemadetail_schedule_cinemastarttime"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_40"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="end"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_below="@+id/cinemadetail_schedule_cinemaname"
            android:layout_toRightOf="@+id/cinemadetail_schedule_cinemastarttime"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_90"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="@dimen/sp_18"
            android:textColor="#666666"
            android:layout_toLeftOf="@+id/cinemadetail_schedule_cinemapriceint"
            android:layout_marginTop="@dimen/dp_40"
            />
        <TextView
            android:id="@+id/cinemadetail_schedule_cinemapriceint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/sp_15"
            android:textColor="#b11450"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_50"/>

        <ImageView
            android:id="@+id/cinemadetail_schedule_next"
            android:layout_width="@dimen/sp_24"
            android:layout_height="@dimen/sp_24"
            android:src="@mipmap/com_icon_next_default"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>