<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_155"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"

    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"

        android:layout_height="@dimen/dp_148">
        
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/attentionfilm_item_image"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_128"
            app:roundedCornerRadius="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_attention_film"
            android:layout_marginLeft="@dimen/dp_10"/>

        <TextView
            android:id="@+id/attentionfilm_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/attentionfilm_item_image"
            android:text="asd"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/attentionfilm_item_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_72"
            android:layout_toRightOf="@+id/attentionfilm_item_image"
            android:layout_below="@+id/attentionfilm_item_name"
            android:text="asd"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:ellipsize="end"

            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/attentionfilm_item_tima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/attentionfilm_item_image"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            android:text="asd"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>