<com.bw.movie.view.filmview.PersonalScrollView2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.bw.movie.fragment.myfragment.MyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:background="@mipmap/vcg"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/myfragment_Simple_remind"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                fresco:placeholderImage="@mipmap/my_icon_remind_default"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_24"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/myfragment_myimage"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                fresco:roundAsCircle="true"
                fresco:placeholderImage="@mipmap/ic_launcher"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/myfragment_myname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冬天来了"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/myfragment_myimage"
                android:layout_marginTop="@dimen/dp_10"
                />

            <Button
                android:id="@+id/myfragment_btn_signin"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_28"
                android:layout_below="@+id/myfragment_myname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:text="签到"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff"
                android:background="@drawable/myfragment_signin"
                />

            <Button
                android:id="@+id/myfragment_btn_signined"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_28"
                android:layout_below="@+id/myfragment_myname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:text="已签到"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:background="@drawable/myfragment_signin"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                fresco:cardCornerRadius="@dimen/dp_5"
                android:alpha="0.8"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/myfragment_cardview"
                android:layout_height="@dimen/dp_86">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/myfragment_iv_messiage"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:src="@mipmap/my_icon_messiage_default" />
                    <TextView
                        android:id="@+id/myfragment_tv_messiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的信息"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_58"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                fresco:cardCornerRadius="@dimen/dp_5"
                android:alpha="0.8"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/myfragment_cardview"
                android:layout_height="@dimen/dp_86">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/myfragment_iv_attention"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:src="@mipmap/my_icon_attention_default" />
                    <TextView
                        android:id="@+id/myfragment_tv_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的关注"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_58"/>

                    <ImageView
                        android:id="@+id/myfragment_iv_rccord"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_84"
                        android:layout_toRightOf="@+id/myfragment_iv_attention"
                        android:src="@mipmap/my_icon_rccord_default" />
                    <TextView
                        android:id="@+id/myfragment_tv_rccord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购票记录"
                        android:layout_marginLeft="@dimen/dp_54"
                        android:layout_toRightOf="@+id/myfragment_tv_attention"
                        android:layout_marginTop="@dimen/dp_58"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                fresco:cardCornerRadius="@dimen/dp_5"
                android:alpha="0.8"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@drawable/myfragment_cardview"
                android:layout_height="@dimen/dp_86">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/myfragment_iv_feedback"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:src="@mipmap/my_icon_feedback_default" />
                    <TextView
                        android:id="@+id/myfragment_tv_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="意见反馈"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_58"/>

                    <ImageView
                        android:id="@+id/myfragment_iv_version"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_84"
                        android:layout_toRightOf="@+id/myfragment_iv_feedback"
                        android:src="@mipmap/my_icon_version_default" />
                    <TextView
                        android:id="@+id/myfragment_tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新版本"
                        android:layout_marginLeft="@dimen/dp_54"
                        android:layout_toRightOf="@+id/myfragment_tv_feedback"
                        android:layout_marginTop="@dimen/dp_58"/>

                    <ImageView
                        android:id="@+id/myfragment_iv_logout"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_84"
                        android:layout_toRightOf="@+id/myfragment_iv_version"
                        android:src="@mipmap/my_icon_logout_default" />
                    <TextView
                        android:id="@+id/myfragment_tv_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出登录"
                        android:layout_marginLeft="@dimen/dp_54"
                        android:layout_toRightOf="@+id/myfragment_tv_version"
                        android:layout_marginTop="@dimen/dp_58"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</com.bw.movie.view.filmview.PersonalScrollView2>
