<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:layout_marginBottom="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_14"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30"
    app:cardCornerRadius="@dimen/sp_9"
    app:cardElevation="@dimen/dp_4"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    >

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_90">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/remmend_simple_image"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/remmend_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asd"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_100"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/remmend_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="qwe"
            android:layout_marginRight="@dimen/dp_30"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/remmend_tv_name"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_100"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/remmend_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qwe"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_alignBottom="@id/remmend_simple_image"
            android:singleLine="true"
            />

        <CheckBox
            android:id="@+id/rey_item_xin"
            android:layout_width="20dp"
            android:layout_height="@dimen/dp_20"
            android:button="@null"
            android:background="@drawable/guanzhu_shape"
           android:layout_alignTop="@+id/remmend_tv_distance"
            android:layout_alignRight="@+id/remmend_tv_title"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>