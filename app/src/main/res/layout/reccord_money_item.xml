<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rccordmoney_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="铁血战士"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"/>

        <Button
            android:id="@+id/rccordmoney_item_gomoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="去付款"
            android:background="@drawable/shapecinemasearch"/>

        <TextView
            android:id="@+id/rccordmoney_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordmoney_item_name"
            android:layout_marginTop="@dimen/dp_20"
            android:text="订单号："
            android:textSize="@dimen/dp_12"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/rccordmoney_item_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordmoney_item_code"
            android:layout_marginTop="@dimen/dp_10"
            android:text="订单号："
            android:textSize="@dimen/dp_12"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/rccordmoney_item_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordmoney_item_cinema"
            android:layout_marginTop="@dimen/dp_10"
            android:text="订单号："
            android:textSize="@dimen/dp_12"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/rccordmoney_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordmoney_item_office"
            android:layout_marginTop="@dimen/dp_10"
            android:text="订单号："
            android:textSize="@dimen/dp_12"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/rccordmoney_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordmoney_item_time"
            android:layout_marginTop="@dimen/dp_10"
            android:text="订单号："
            android:textSize="@dimen/dp_12"
            android:textColor="#999999"/>

        <TextView
            android:id="@+id/rccordmoney_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rccordmoney_item_num"
            android:layout_marginTop="@dimen/dp_10"
            android:text="订单号："
            android:textSize="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:textColor="#999999"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>