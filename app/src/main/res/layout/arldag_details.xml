<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        >


        <ImageView
            android:id="@+id/adsfg"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/com_icon_comment_default"
            />
        <TextView
            android:id="@+id/sdzfxcvbnm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入你的评论"
            android:layout_toRightOf="@id/adsfg"
            android:layout_marginLeft="@dimen/dp_50"
            android:textSize="@dimen/sp_14"
            />
        <EditText
            android:id="@+id/de_al_ed_contents"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_70"
            android:ems="7"
            android:textSize="@dimen/sp_12"
            android:gravity="top"
            android:textColor="#100f0f"
            android:hint="请输入你要评论的内容..."
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/adsfg"
            android:layout_alignLeft="@+id/adsfg"
            android:layout_alignRight="@+id/sdzfxcvbnm"
            android:background="@null"
            />
        <Button
            android:id="@+id/ed_al_but_sure"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/login_but_shape"
            android:layout_below="@+id/de_al_ed_contents"
            android:text="评论"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            />

        <Button
            android:id="@+id/ed_al_but_quxiao"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignRight="@id/de_al_ed_contents"
            android:background="@drawable/d_more_buxuan"
            android:layout_below="@+id/de_al_ed_contents"
            android:text="取消"
            android:textColor="#100505"
            android:textSize="@dimen/sp_12"
            />

    </RelativeLayout>

</RelativeLayout>