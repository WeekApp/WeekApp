<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bitmap"
        />

    <ImageView
        android:id="@+id/login_icon_number"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:src="@mipmap/register_icon_phone_default"
        android:layout_marginTop="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_30"
        />
    <EditText
        android:id="@+id/login_edit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textColor="#fff"
        android:hint="手机号"
        android:textColorHint="#fff"
        android:layout_toRightOf="@id/login_icon_number"
        android:layout_alignTop="@id/login_icon_number"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_30"
        />
    <TextView
        android:id="@+id/login_line_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#838080"
        android:layout_below="@id/login_edit_number"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignLeft="@id/login_icon_number"
        android:layout_alignRight="@id/login_edit_number"
        />

    <ImageView
        android:id="@+id/login_icon_pass"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:src="@mipmap/register_icon_lock_default"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_below="@+id/login_line_four"
        />
    <EditText
        android:id="@+id/login_edit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textColor="#fff"
        android:hint="登录密码"
        android:password="true"
        android:textColorHint="#fff"
        android:layout_toLeftOf="@+id/login_icon_eye"
        android:layout_toRightOf="@id/login_icon_pass"
        android:layout_alignTop="@id/login_icon_pass"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/login_line_five"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#838080"
        android:layout_below="@id/login_edit_pass"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignLeft="@id/login_icon_pass"
        android:layout_alignRight="@id/login_icon_eye"
        />

    <ImageView
        android:id="@+id/login_icon_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/log_icon_eye_default"
        android:layout_alignTop="@+id/login_icon_pass"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_30"
        />

    <CheckBox
        android:id="@+id/login_cb_remaber_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_line_five"
        android:layout_marginTop="@dimen/dp_20"
        android:text="记住密码"
        android:textSize="@dimen/sp_14"
        android:buttonTint="#fff"
        android:textColor="#fff"
        android:layout_alignLeft="@+id/login_line_five"
        />
    <CheckBox
        android:id="@+id/login_cb_self_login"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/login_cb_remaber_pass"
        android:layout_below="@+id/login_line_five"
        android:layout_marginTop="@dimen/dp_20"
        android:text="自动登录"
        android:textSize="@dimen/sp_14"
        android:buttonTint="#fff"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/login_text_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速注册"
        android:textSize="@dimen/sp_14"
        android:textColor="#fff"
        android:layout_alignTop="@+id/login_cb_self_login"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_alignRight="@id/login_icon_eye"
        />

    <Button
        android:id="@+id/login_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/login_line_four"
        android:layout_alignLeft="@+id/login_line_four"
        android:background="@drawable/login_but_shape"
        android:layout_below="@+id/login_text_fast"
        android:layout_marginTop="@dimen/dp_50"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="@dimen/sp_16"
        />

    <TextView
        android:id="@+id/disanfang_left_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fff"
        android:layout_below="@id/login_sure"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_alignLeft="@id/login_sure"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/disanfang_text_whchat"
        />
    <TextView
        android:id="@+id/disanfang_text_whchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#fff"
        android:text="第三方账号快速登录"
        android:layout_below="@id/login_sure"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#fff"
        android:layout_alignTop="@+id/disanfang_left_line"
        android:layout_toRightOf="@+id/disanfang_text_whchat"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignRight="@id/login_sure"
        />
    <ImageView
        android:id="@+id/disanfang_icon_wechat"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/log_icon_weixin_default"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/disanfang_text_whchat"
        android:layout_marginTop="@dimen/dp_15"
        />
</RelativeLayout>